<div class="custom-image-text--section-wrapper">
  <div class="container">
    <div class="custom-image-text-wrapper">
    {%- if section.settings.title != blank -%}
    <header class="section__header text-container text-left">
      <h1 class="heading h2">{{ section.settings.title | escape }}</h1>        
    </header>
    {%- endif -%}
    {% if section.settings.image != blank %}
    <div class="image_wrapper">
      <img src="{{ section.settings.image | img_url:'master' }}">
    </div>
    {% endif %}
    <div class="bottom_content_wrap">
      <div class="bottom_content_left">
        {% if section.settings.title_left != blank %}        
        <h3 class="heading h2">
          {{ section.settings.title_left }}
        </h3>
        {% endif %}
        {% if section.settings.content_left != blank %}
        <div class="rte">
			{{ section.settings.content_left }}
        </div>
        {% endif %}
      </div>
      <div class="bottom_content_right">
        {% if section.settings.title_right != blank %}
        <h3 class="heading h5">{{ section.settings.title_right }}</h3>
        {% endif %}
        {% if section.settings.content_right != blank %}
        <div class="rte">
          {{ section.settings.content_right }}
        </div>
        {% endif %}
      </div>
    </div>
    </div>
  </div>
</div>   


{% schema %}
  {
    "name": "Custom Image Text",
    "settings": [
		{
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Heading"
        },
		{
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
		{
          "type": "header",
          "content": "Left Side"
        },
		{
          "type": "text",
          "id": "title_left",
          "label": "Heading Left",
          "default": "Heading"
        },
        {
          "type": "richtext",
          "id": "content_left",
          "label": "Content Left"
        },
		{
          "type": "header",
          "content": "Right Side"
        },
		{
          "type": "text",
          "id": "title_right",
          "label": "Heading Right",
          "default": "Heading"
        },
        {
          "type": "richtext",
          "id": "content_right",
          "label": "Content Right"
        }
	],
    "presets": [
      {
        "name": "Custom Image Text"
      }
    ]
  }
{% endschema %}

